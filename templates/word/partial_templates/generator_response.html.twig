<div class="row" style="width: 70%; font-size: 20px; text-align: center; font-weight: bold; margin-top: 40px; margin-left: 15%">
    <div style="width: 49.5%; border-right: 1px solid #c4c4c4; border-left: 1px solid #c4c4c4">
        {% for word in words %}
            {% if loop.index0 % 2 == 0 %}
                <p>
                    {{ word.name|capitalize }}
                    <!-- Button trigger modal -->
                    <button type="button" class="btn btn-primary word_description_button" data-toggle="modal" data-target="#word-{{ word.id }}">
                        <i class="fas fa-align-right"></i>
                    </button>
                </p>

                <!-- Modal -->
                <div class="modal fade" id="word-{{ word.id }}" tabindex="-1" role="dialog" aria-labelledby="" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">{{ word.name|capitalize }}</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                {{ word.getDescription()|capitalize }}
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}
        {% endfor %}
    </div>
    <div style="width: 49.5%; border-left: 1px solid #c4c4c4; border-right: 1px solid #c4c4c4;">
        {% for word in words %}
            {% if loop.index0 % 2 != 0 %}
                <p>
                    {{ word.name|capitalize }}
                    <!-- Button trigger modal -->
                    <button type="button" class="btn btn-primary word_description_button" data-toggle="modal" data-target="#word-{{ word.id }}">
                        <i class="fas fa-align-right"></i>
                    </button>
                </p>

                <!-- Modal -->
                <div class="modal fade" id="word-{{ word.id }}" tabindex="-1" role="dialog" aria-labelledby="" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">{{ word.name|capitalize }}</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                {{ word.getDescription()|capitalize }}
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}
        {% endfor %}
    </div>
</div>